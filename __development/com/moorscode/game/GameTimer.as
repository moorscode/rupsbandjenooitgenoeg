package com.moorscode.game {	import flash.utils.getTimer;		import com.moorscode.net.NetController;		public class GameTimer {		private static var startTime:uint = 0;				public function GameTimer():void {		}				public static function start():void {			startTime = getTimer();		}				public static function get time():uint {			var ping:uint = (NetController.connected)?Math.round(NetController.ping / 2.0):0;			return getTimer() - startTime - ping;		}	}}
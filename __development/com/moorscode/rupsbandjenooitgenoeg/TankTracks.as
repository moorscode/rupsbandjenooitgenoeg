package com.moorscode.rupsbandjenooitgenoeg {		import flash.display.Sprite;	import flash.display.MovieClip;	import flash.geom.Point;	import flash.events.Event;		import com.moorscode.game.IGameObject;		public class TankTracks extends IGameObject {		private var gfx:Sprite;		private var owner:Sprite;		private var active:Boolean = true;				public function TankTracks(position:Point):void {			super(position);						gfx = Sprite(addChild(getMovieClip("tankTracks")));			gfx.addEventListener(Event.ENTER_FRAME, remove);			gfx.alpha = 1;			//gfx.gotoAndPlay(1);		}				public function isActive():Boolean {			return active;		}				public function forceDelete():void {			if(active) {				unload();			}		}				public override function unload():void {			super.unload();						active = false;						if(gfx) {				gfx.removeEventListener(Event.ENTER_FRAME, remove);				gfx = null;			}						if(this.parent && this.parent.contains(this)) {				this.parent.removeChild(this);			}		}				private function remove(event:Event):void {			if(gfx) {				gfx.alpha -= 0.01;								if(gfx.alpha <= 0) {				//if(gfx.currentFrame == gfx.totalFrames) {					unload();				}			}		}	}}
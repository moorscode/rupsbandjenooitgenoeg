package com.moorscode.sound {	import flash.media.Sound;		import flash.events.IOErrorEvent;	import flash.events.Event;		import flash.net.URLLoader;	import flash.net.URLRequest;			public class SoundCache {				private static var sounds:Array = new Array();				public function SoundCache():void {		}				public static function load(fullpath:String):Sound {			var sound:Array = getSound(fullpath);			if(null != sound) {				return sound['sound'];			}						var index:uint = loadSound(fullpath);			return sounds[index]['sound'];		}				private static function getSound(fullpath:String):Array {			for each(var sound:Array in sounds) {				if(sound['fullpath'] == fullpath) {					return sound;				}			}						return null;		}				private static function loadSound(fullpath:String):uint {			var newSound:Array = new Array();						newSound['fullpath'] = fullpath;						var sound:Sound = newSound['sound'] = new Sound();				sound.addEventListener(IOErrorEvent.IO_ERROR, errorHandler);				sound.load(new URLRequest(fullpath));						return sounds.push(newSound) - 1;		}				private static function errorHandler(error:IOErrorEvent):void {						return;		}	}}
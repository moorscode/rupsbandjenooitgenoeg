<?xml version="1.0" encoding="UTF-8"?>
<chart>

	<chart_type>line</chart_type>
	
	<chart_rect x='50' y='50' width='700' height='150' />
	<chart_pref rotation_x='5' rotation_y='0' />
	
	<series_color>
      <color>003366</color>
		<color>C6BE8C</color>
		<color>CC6600</color>
		<color>990000</color>
		<color>520000</color>
		<color>BFBFC1</color>
		<color>808080</color>
   </series_color>

	<chart_data>
      <row>
         <null/>
			#AXIS#
      </row>
		
      <row>
			<string>Average idle time in seconds</string>
			#IDLE_DATA#
		</row>
		
   </chart_data>
	
	<chart_guide horizontal='true'
                vertical='false'
                thickness='1' 
                color='ff4400' 
                alpha='75' 
                type='dashed' 
                
                 
                radius='8'
                fill_alpha='0'
                line_color='ff4400'
                line_alpha='75'
                line_thickness='4'
             
                size='10'
                text_color='ffffff'
                background_color='ff4400'
                text_h_alpha='90'
                text_v_alpha='90' 
                />

   <!-- use chart_label in combination with chart_guide -->
   <chart_label position='cursor' />
	
	<axis_value 
				min='0'
				max='#MAX_VALUE#'
				steps='#STEPS#'
            prefix='' 
            suffix=' secs' 
            decimals='0'
            decimal_char='.'  
            separator='' 
            show_min='true' 
            font='arial' 
            bold='true' 
            size='10' 
            color='000000' 
            alpha='90'
            orientation='' 
            />
				
	<context_menu full_screen='true' about='false' print='false' />

</chart>
package com.moorscode.game {		import flash.geom.Rectangle;	import flash.geom.Point;		public class GameCamera {		public static var __field:Rectangle = new Rectangle(0,0,550,400);				public function GameCamera() {}				public static function intersects(rect:Rectangle):Boolean {			return __field.intersects(rect);		}				public static function containsPoint(point:Point):Boolean {			var cam:Rectangle = GameCamera.__field;			return Boolean(point.x > cam.x && point.x < cam.x + cam.width && point.y > cam.y && point.y < cam.y + cam.height);		}				public static function set x(value:Number):void {			__field.x = value - (__field.width / 2.0);		}				public static function get x():Number {			return __field.x;		}				public static function set y(value:Number):void {			__field.y = value - (__field.height / 2.0);		}				public static function get y():Number {			return __field.y;		}				public static function set width(value:Number):void {			__field.width = value;			__field.x = x - (value / 2.0);		}				public static function get width():Number {			return __field.width;		}		public static function set height(value:Number):void {			__field.height = value;			__field.y = y - (value / 2.0);		}		public static function get height():Number {			return __field.height;		}	}}
package com.moorscode.rupsbandjenooitgenoeg {	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.geom.Point;		public class EnemyTank extends Tank {		public function EnemyTank(position:Point):void {			super(position, 3000, true);						totalHitpoints = hitpoints = 2;			accelerateSpeed = 0.05;						turnSpeed = 1.0;						shootingRange = 180;						turretTurnSpeed = 1.4;			targetTurretDirection = turretDirection = Math.random() * 360;						lastVolume = 0;						targetRotation = rotation = Math.random() * 360;		}						public override function tick():void {			super.tick();			if(!alive) return;						var lastTargetDistance:Number = Point.distance(lastTarget, new Point(this.x, this.y));						if(Math.abs(turretDirection - targetTurretDirection) < 10 && lastTargetDistance > 0 && lastTargetDistance < shootingRange) {				shoot();			}		}	}}
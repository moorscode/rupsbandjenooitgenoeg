package com.moorscode.rupsbandjenooitgenoeg {	import flash.display.Sprite;	import flash.display.MovieClip;		import flash.events.Event;		import flash.geom.Point;		import flash.net.URLRequest;	import flash.net.URLLoader;		import com.moorscode.input.Input;	import com.moorscode.game.GameCamera;		public class PlayerTank extends Tank {				private var controls:Object = {up:87,down:83,left:65,right:68}				public function PlayerTank(playerId:int = 0, rank:int = 0):void {			super(null, 1400);						setRank(rank);						this.playerId = playerId;			totalHitpoints = hitpoints = 10;						accelerateSpeed = 0.07;			turnSpeed = 4;			shootingRange = 200;						turretTurnSpeed = 5;			targetTurretDirection = turretDirection = 0;						updateAudio(0.6, 0);						var settings = new URLLoader();				settings.addEventListener(Event.COMPLETE, applySettings, false, 0, true);				settings.load(new URLRequest("assets/php/config.php"));		}				private function applySettings(event:Event):void {			event.target.removeEventListener(event.type, arguments.callee);						var xml:XML = XML(event.target.data);						if (xml == "") {				return;			}						controls.up = xml.keys.up;			controls.down = xml.keys.down;			controls.left = xml.keys.left;			controls.right = xml.keys.right;		}				// turn the turret:		public override function turnTo(target:Point = null):void {			// calculate target direction			super.turnTo(Input.mouseCoords);		}				override public function updateGfx():void {			super.updateGfx();		}				public override function tick():void {			super.tick();			if(!alive) return;						if(Input.mouseDown) {				shoot();				trace('shot');			}						// W			if(Input.keyDown(controls.up)) {				accelerate();			}						// S			if(Input.keyDown(controls.down)) {				decelerate();			}						// Geen W en geen S			if(!Input.keyDown(controls.up) && !Input.keyDown(controls.down)) {				stationary();			}						// A			if(Input.keyDown(controls.left)) {				turnLeft();			}						// D			if(Input.keyDown(controls.right)) {				turnRight();			}		}	}}
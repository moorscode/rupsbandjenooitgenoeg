package com.moorscode.vlindervleugeltjevernielveel {	import flash.display.Sprite;	import flash.geom.Point;		import com.moorscode.input.Input;	import com.moorscode.vlindervleugeltjevernielveel.Plane;		public class PlayerPlane extends Plane {		private var slideSpeed:Number = 5;				public function PlayerPlane(position:Point):void {			super(position, 400);						totalHitpoints = hitpoints = 10;						// kan alleen zijwaarts...			maxSpeed = 0;			accelerateSpeed = 0;						updateAudio(0.5, 0);		}				public function slideTo(position:Point):void {			if(this.x == position.x) return;						if(this.x < position.x) {				this.x += slideSpeed;			} else {				this.x -= slideSpeed;			}						if(Math.abs(this.x - position.x) < 3) {				this.x = position.x;			}		}				public override function tick():void {//			super.tick();			slideTo(Input.mouseCoords);		}	}}
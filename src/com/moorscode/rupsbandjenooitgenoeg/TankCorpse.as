package com.moorscode.rupsbandjenooitgenoeg {		import flash.geom.Point;	import flash.display.Sprite;	import flash.utils.Timer;	import flash.events.TimerEvent;		import com.moorscode.game.IGameObject;		public class TankCorpse extends IGameObject {		private var corpse:Sprite;		private var cleanupTimer:Timer;				public function TankCorpse(position:Point, rotation:Number, enemy:Boolean = false):void {			super(position);			corpse = Sprite(addChild(getSprite(((enemy)?"enemyTankDestroyed":"tankDestroyed"))));						super.rotation = rotation;						cleanupTimer = new Timer(20000, 1);			cleanupTimer.addEventListener(TimerEvent.TIMER, fadeOut);			cleanupTimer.start();		}				private function fadeOut(event:TimerEvent):void {			if(cleanupTimer.delay == 20000) {				cleanupTimer.delay = 500;				cleanupTimer.repeatCount = 10;			}						corpse.alpha -= 0.1;						if(corpse.alpha == 0.0) {				unload();			}		}				public override function unload():void {			super.unload();						if(cleanupTimer.running) {				cleanupTimer.stop();			}						cleanupTimer.removeEventListener(TimerEvent.TIMER, fadeOut);			cleanupTimer = null;						corpse = null;		}	}}